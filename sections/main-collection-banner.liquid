{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @media screen and (max-width: 749px) {
    .collection-hero--with-image .collection-hero__inner {
      padding-bottom: calc({{ settings.media_shadow_vertical_offset | at_least: 0 }}px + 2rem);
    }
  }
{%- endstyle -%}

<div class="collection-hero{% if section.settings.show_collection_image and collection.image %} collection-hero--with-image{% endif %} color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-hero__inner  {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    
    <div class="collection-hero__text-wrapper page-width">
      <h1 class="collection-hero__title">{{ collection.title | escape }}</h1>
      
      {% if section.settings.show_collection_description %}
        <div class="collection-hero__description rte">{{ collection.description }}</div>
      {% endif %}

    </div>

    <div class="images-container">
       {% if collection.image %}
        <div class="collection-hero__image-container media gradient">
          <img
            src="{{ collection.image | image_url: width: 750 }}"
            width="{{ collection.image.width }}"
            height="{{ collection.image.height }}"
            alt="{{ collection.image.alt | escape }}"
          >
        </div>
      {% endif %}

      {% if collection.metafields.custom.afbeelding_2 %}
        <div class="collection-hero__image-container media gradient">
          <img
            src="{{ collection.metafields.custom.afbeelding_2 | image_url: width: 750 }}"
            width="{{ collection.metafields.custom.afbeelding_2.width }}"
            height="{{ collection.metafields.custom.afbeelding_2.height }}"
            alt="{{ collection.metafields.custom.afbeelding_2.alt | escape }}"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitel",
      "default": "subtitel"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Knoptekst",
      "default": "link text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Knop link",
    },
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "Eerte afbeelding"
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Tweede afbeelding"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Beschrijving tonen"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "Eerste afbeelding tonen"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Kleurenschema",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}

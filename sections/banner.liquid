{{ 'section-banner.css' | asset_url | stylesheet_tag }}
<section class="color-{{ section.settings.color_scheme }} gradient">
  <div 
    class="banner-background section-{{ section.id }}-padding page-width page-width-desktop"
  >
    <div class="banner-content">
        <div class="banner-text">
            {% unless section.settings.title == blank %}
              <h1 class="banner-title">{{ section.settings.title }}</h1>
            {% endunless %}
             {% unless section.settings.title == blank %}
              <h2 class="banner-subtitle">{{ section.settings.subtitle }}</h2>
            {% endunless %}
            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
              <a href="{{ section.settings.button_link }}" class="banner-button">
                  {{ section.settings.button_label }}
              </a>
            {% endif %}
        </div>
       <div class="banner-images">
        {% if section.settings.afbeelding %}
          <div class="image">
            <img
              src="{{ section.settings.afbeelding | image_url: width: 1600 }}"
              alt="{{ section.settings.afbeelding.alt | escape }}"
              width="{{ section.settings.afbeelding.width }}"
              height="{{ section.settings.afbeelding.height }}"
              loading="lazy"
            >
          </div>
        {% endif %}
         {% if section.settings.afbeelding_2 %}
          <div class="image">
            <img
              src="{{ section.settings.afbeelding_2 | image_url: width: 1600 }}"
              alt="{{ section.settings.afbeelding_2.alt | escape }}"
              width="{{ section.settings.afbeelding_2.width }}"
              height="{{ section.settings.afbeelding_2.height }}"
              loading="lazy"
            >
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>


{% style %}


{% endstyle %}




{% schema %}
{
  "name": "Banner",
  "tag": "section",
  "class": "section custom-feature",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titel",
      "default": "Mijn custom component"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitel",
      "default": "Mijn custom component"
    },
    {
    "type": "text",
    "id": "button_label",
    "label": "Knoptekst",
    "default": "Bekijk meer"
    },
    {
    "type": "url",
    "id": "button_link",
    "label": "Knop link"
    },
    {
      "type": "image_picker",
      "id": "afbeelding",
      "label": "Afbeelding"
    },
     {
      "type": "image_picker",
      "id": "afbeelding_2",
      "label": "Afbeelding 2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Kleurenschema",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding boven",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding onder",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}
